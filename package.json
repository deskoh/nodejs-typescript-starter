{
  "name": "nodejs-typescript-starter",
  "version": "0.1.0",
  "description": "",
  "main": "build/index.js",
  "scripts": {
    "prepare": "husky install",
    "pre-commit": "lint-staged",
    "dev": "ts-node-dev --no-notify src/",
    "build": "tsc",
    "start": "npm run build && node dist/",
    "start:docker": "docker run --rm -it -p 3030:3030 --env-file ./docker.env my-app",
    "build:docker": "docker build -t my-app .",
    "eslint": "eslint ."
  },
  "keywords": [
    "nodejs",
    "typescript",
    "starter"
  ],
  "author": "deskoh",
  "license": "ISC",
  "lint-staged": {
    "*.{js,ts}": "eslint --fix"
  },
  "dependencies": {
    "config": "^3.3.6",
    "express": "^4.17.1",
    "helmet": "^4.4.1",
    "loglevel": "^1.7.1",
    "module-alias": "^2.2.2",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/config": "0.0.38",
    "@types/express": "^4.17.11",
    "@types/helmet": "0.0.48",
    "@types/morgan": "^1.9.2",
    "@typescript-eslint/eslint-plugin": "^4.20.0",
    "eslint": "^7.23.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-plugin-import": "^2.22.1",
    "husky": "^6.0.0",
    "lint-staged": "^10.5.4",
    "ts-node-dev": "^1.1.6",
    "typescript": "^4.2.3"
  },
  "_moduleAliases": {
    "@": "build"
  }
}
